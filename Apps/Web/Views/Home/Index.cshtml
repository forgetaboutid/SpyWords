@{
    ViewData["Title"] = "Game On";
}

<div class="text-center">
    <h2 class="display-4">Let's Play Spy Words</h2>
</div>

<div>
    <table id="Cards">
        <tr>
            @for (int i = 0; i < 25; i++)
            {
                if (i > 0 && i % 5 == 0)
                {
                @:</tr><tr>
                }
                <td id="@i"></td>
            }
        </tr>
    </table>
</div>